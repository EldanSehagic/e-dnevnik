<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="com.skola.controller.StudentDashboardController"
      spacing="10" alignment="center" style="-fx-padding: 20;">

    <Label text="Dobrodošli, Učenik!" fx:id="welcomeLabel"/>

    <TableView fx:id="gradesTable" prefWidth="400" prefHeight="200">
        <columns>
            <TableColumn text="Predmet" fx:id="subjectColumn" prefWidth="200"/>
            <TableColumn text="Ocjena" fx:id="gradeColumn" prefWidth="100"/>
        </columns>
    </TableView>

</VBox>
